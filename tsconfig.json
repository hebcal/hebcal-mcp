{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es6",
    "moduleResolution": "Node",
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "*": ["./types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
